# Database
DATABASE_URL="postgresql://user:password@localhost:5432/dbname"

# App Configuration
NODE_ENV="development"
APP_BASE_URL="http://localhost:3000"
NEXT_PUBLIC_APP_BASE_URL="http://localhost:3000"

# Authentication (Better Auth)
BETTER_AUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
BETTER_AUTH_URL="http://localhost:3000"

# Email (Resend)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# OAuth Providers (Optional - uncomment to enable)
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"
# GITHUB_CLIENT_ID="your-github-client-id"
# GITHUB_CLIENT_SECRET="your-github-client-secret"

# S3 Storage (AWS S3 or compatible service)
S3_BUCKET_NAME="your-bucket-name"
S3_ACCESS_KEY_ID="your-access-key-id"
S3_SECRET_ACCESS_KEY="your-secret-access-key"
S3_ENDPOINT_URL="https://s3.amazonaws.com"
NEXT_PUBLIC_S3_PUBLIC_BUCKET_URL="https://your-bucket-name.s3.amazonaws.com"

# Cloudflare R2 (Alternative to S3 - uncomment to use)
# R2_BUCKET_NAME="your-r2-bucket-name"
# R2_ACCOUNT_ID="your-cloudflare-account-id"
# R2_ACCESS_KEY_ID="your-r2-access-key-id"
# R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"

# Stripe Payment Processing
STRIPE_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Optional: Skip environment validation during Docker builds
# SKIP_ENV_VALIDATION="true"
