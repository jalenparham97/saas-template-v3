{
  "name": "saas-template-v3",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "preview-email": "turbo email#dev",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "db:deploy": "turbo db:deploy",
    "db:studio": "turbo db:studio",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "turbo db:generate"
  },
  "devDependencies": {
    "@workspace/eslint-config": "*",
    "@workspace/typescript-config": "*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.9.3"
  },
  "packageManager": "bun@1.2.23",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
